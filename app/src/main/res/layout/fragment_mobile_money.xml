<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MobileMoneyFragment">

    <TextView
        android:id="@+id/mobile_money_instructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Instructions pour payer avec Mobile Money"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/mobile_money_step1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1. Tapez le code suivant sur votre téléphone :"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/mobile_money_instructions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/mobile_money_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="*126*14*6383637638*Montant#"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/mobile_money_step1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/mobile_money_step2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2. Suivez les instructions à l'écran pour confirmer le paiement."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/mobile_money_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/mobile_money_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="J'ai payé"
        android:textColor="@color/white"
        android:background="@color/red"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/mobile_money_step2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
